{
  "name": "unreal-rc",
  "version": "0.1.1",
  "description": "Typed client for Unreal Engine Remote Control over WebSocket or HTTP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peculiarnewbie/unreal-rc.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/peculiarnewbie/unreal-rc/issues"
  },
  "homepage": "https://github.com/peculiarnewbie/unreal-rc#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack:check": "npm pack --dry-run",
    "prepublishOnly": "bun run clean && bun run typecheck && bun run build"
  },
  "dependencies": {
    "zod": "^4.0.11"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
